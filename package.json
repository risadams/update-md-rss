{
  "name": "update-md-rss",
  "version": "1.0.0",
  "description": "Updates a markdown file with the contents of an RSS feed",
  "keywords": [
    "rss",
    "markdown",
    "github",
    "action"
  ],
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "pretest": "npm run build",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/risadams/update-md-rss.git"
  },
  "author": "Ris Adams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/risadams/update-md-rss/issues"
  },
  "homepage": "https://github.com/risadams/update-md-rss#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@types/node": "^18.11.18",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.31.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.3.1",
    "js-yaml": "4.1.0",
    "prettier": "2.8.1",
    "process": "0.11.10",
    "rss-parser": "^3.12.0",
    "ts-jest": "^29.0.4",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/xml2js": "^0.4.11"
  }
}
